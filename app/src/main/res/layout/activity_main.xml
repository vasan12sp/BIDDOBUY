<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bidderregister"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="16dp"
        android:text="BIDDER REGISTER"
        android:textSize="20dp"

        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bidderlogin"
        app:layout_constraintEnd_toEndOf="@+id/bidderlogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bidderlogin" />

    <Button
        android:id="@+id/bidderlogin"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:text="bIDDER LOGIN"
        android:textSize="20dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/sellerregister"
        app:layout_constraintEnd_toEndOf="@+id/sellerregister"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sellerregister" />

    <Button
        android:id="@+id/sellerregister"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="20dp"
        android:text="SELLER REGISTER"
        android:textSize="20dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/sellerlogin"
        app:layout_constraintEnd_toEndOf="@+id/sellerlogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sellerlogin" />

    <Button
        android:id="@+id/sellerlogin"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="24dp"
        android:text="SELLER LOGIN"
        android:textSize="20dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/exitbutton"
        app:layout_constraintEnd_toEndOf="@+id/exitbutton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/exitbutton" />

    <Button
        android:id="@+id/exitbutton"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginBottom="64dp"
        android:text="EXIT"
        android:textSize="20dp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="WELCOME TO BIDDOBUY"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>